<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatInterfaceActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:background="@drawable/message_box_background"
        android:backgroundTint="@color/white">

        <ImageView
            android:id="@+id/big_photo"
            android:layout_width="66dp"
            android:layout_height="74dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/chat_back"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person1" />

        <ImageButton
            android:id="@+id/chat_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:text="Dr. Anna"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/big_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:text="Online"
            app:layout_constraintStart_toEndOf="@+id/big_photo"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageView
            android:id="@+id/small_photo"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_back"
            app:srcCompat="@drawable/person1" />

        <ImageView
            android:id="@+id/small_photo2"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="208dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_back"
            app:srcCompat="@drawable/person1" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="8dp"
            android:text="9:15 PM"
            app:layout_constraintStart_toEndOf="@+id/small_photo"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="152dp"
            android:text="9:34 PM"
            app:layout_constraintStart_toEndOf="@+id/small_photo"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="324dp"
            android:text="10:34 PM"
            app:layout_constraintStart_toEndOf="@+id/small_photo"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"

            android:background="@drawable/message_box_background"
            android:backgroundTint="@color/dark_green"
            android:text="Hi..."
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="168dp"

            android:background="@drawable/message_box_background"
            android:backgroundTint="@color/dark_green"
            android:text="Hi again..."
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time1" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="224dp"

            android:background="@drawable/message_box_background"
            android:backgroundTint="@color/dark_green"
            android:text="Some message"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time1" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:layout_marginTop="432dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="202dp"
            android:layout_marginEnd="16dp"
            android:text="Hi..."
            android:background="@drawable/message_box_background"
            android:backgroundTint="@color/dark_orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="456dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/message_box_background"
            android:backgroundTint="@color/dark_orange"
            android:text="Some message"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/chat_linearlayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:weightSum="100">

        <EditText
            android:id="@+id/massage_box"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint=" Type in..."
            android:layout_marginLeft="10dp"
            android:layout_weight="80"></EditText>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/plus"
            android:layout_weight="10"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/emoji"
            android:layout_weight="10"></ImageView>
    </LinearLayout>

</RelativeLayout>