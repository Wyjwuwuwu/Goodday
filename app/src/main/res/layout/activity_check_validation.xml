<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckValidationActivity"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="130dp"
            app:srcCompat="@drawable/email" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="2dp"
            android:paddingTop="20dp"
            android:text="Check your mail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:text="We have sent a password recover instructions to your email."
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_open_app"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:backgroundTint="@color/dark_orange"
            app:cornerRadius="10dp"
            android:textSize="18sp"
            android:text="Open Email App"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:text="Skip, I'll confirm later"
                android:textColor="@color/dark_grey"
                android:textSize="18sp"
                android:textStyle="bold"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:text="Did not receive the email? Check your spam filter,\n or try another email address"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>