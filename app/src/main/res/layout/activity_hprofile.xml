<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".HProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ivBackHomeHProfile"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:layout_marginLeft="3.0dip"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Feeling Now ?"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/question_hprofile"
            android:layout_width="32dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_gravity="right|center"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/ic_baseline_help_24" />

    </LinearLayout>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/ic_baseline_wb_sunny_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:layout_marginStart="20dp"
                        android:textSize="26dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:text="35° - 36.5° - 37.3° -38°- 40°"/>

                <RadioGroup
                    android:id="@+id/temGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/temp1"
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:id="@+id/temp2"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:id="@+id/temp3"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:id="@+id/temp4"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:id="@+id/temp5"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/ic_baseline_favorite_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Presure"
                        android:layout_marginStart="20dp"
                        android:textSize="26dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:text="Very Low -Normal- Very High"/>

                <RadioGroup
                    android:id="@+id/bloGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/ic_baseline_outlet_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shiver,Dizzy-Thirsty,Confusion "
                        android:layout_marginStart="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="95dp"
                    android:text="Severe -Normal- Severe"/>

                <RadioGroup
                    android:id="@+id/shiGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/ic_baseline_trending_down_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breath and Pain"
                        android:layout_marginStart="20dp"
                        android:textSize="26dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="65dp"
                    android:text="Dyspnea -Polypnea-Normal- Little Pain- Pain"/>

                <RadioGroup
                    android:id="@+id/breGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/ic_baseline_analytics_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulse"
                        android:layout_marginStart="20dp"
                        android:textSize="26dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginStart="95dp"
                    android:text="Very Low -Normal- Very Fast"/>

                <RadioGroup
                    android:id="@+id/pulsGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                    <RadioButton
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/selbutton"
                        android:textColor="@drawable/seltext"
                        android:elevation="4dp"
                        android:padding="16dp"/>
                </RadioGroup>

            </LinearLayout>


            <ImageButton
                android:id="@+id/submit_hprofile"
                android:background="@color/white"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_baseline_upload_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:layout_gravity="center"
                android:text="submit"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

