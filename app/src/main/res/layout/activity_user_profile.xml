<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UserProfile"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_baseline_menu_24">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_gravity="right"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_notifications_24"
                android:layout_gravity="right"/>


        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/round_button5"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/profile1" />

            <TextView
                android:id="@+id/fullname_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="Taimoor Sikander"
                android:textColor="#000"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/follow_layout"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/fullname_field"
                android:layout_marginLeft="-30dp">

                <TextView
                    android:id="@+id/follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="10"
                    android:textSize="8pt"/>

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/follow"
                    android:text="Follow"
                    android:textColor="#f5f5f5"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#f5f5f5"
                android:layout_toRightOf="@id/follow_layout"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/line1">

                <TextView
                    android:id="@+id/follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="10"
                    android:textSize="8pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/follower"
                    android:layout_centerHorizontal="true"
                    android:text="Follower"
                    android:textColor="#f5f5f5" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="EVERYDAY IS A GOOD DAY"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/profile_image"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_stars_24" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_marginTop="-50dp">

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_button_grey"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/tv_healthScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="86"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="#588b8b"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Score"
                    android:textSize="6pt"
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_healthScore"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/round_button_grey">

                <TextView
                    android:id="@+id/tv_tracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="355"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:textColor="#588b8b"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Tracking Days"
                    android:textColor="@color/black"
                    android:textSize="6pt"
                    android:layout_below="@+id/tv_tracking"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="-50dp">

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_button_white">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/round_button_white">
                
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile1"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:textColor="@color/black"
                    android:text="Taimoor Sikander"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_profile"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May 12, 2022，6：55 PM"
                    android:textSize="5pt"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/img_profile"
                    android:layout_below="@id/tv_username"/>




            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Goodday."
                android:textSize="8pt"
                android:padding="10dp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button_grey">

                <TextView
                    android:id="@+id/tv_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f28f3b"
                    android:textSize="8pt"
                    android:layout_margin="5dp"
                    android:text="Today Health Score is"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May 12, 2022"
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_card1"
                    android:layout_alignEnd="@id/tv_card1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="90"
                    android:textStyle="bold"
                    android:textColor="#588b8b"
                    android:layout_toRightOf="@id/tv_card1"
                    android:textSize="18pt"/>


            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:backgroundTint="#f28f3b"

                android:src="@drawable/ic_baseline_add_24"
                android:layout_margin="16dp" />
            
        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>