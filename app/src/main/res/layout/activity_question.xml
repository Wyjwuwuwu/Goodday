<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".HealthCareActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ivBackQuestion"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="3.0dip"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health comparison"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/questionBackHome"
            android:layout_width="40dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="right|center"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/ic_baseline_home_24" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="450dp"
            android:src="@drawable/blood" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/potato_gif"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/potato"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/oran_gif"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/orange"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/mushroom_gif"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mushroom"
                android:layout_marginTop="20dp"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>